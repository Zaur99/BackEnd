@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> 

<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-warning mr-2" asp-controller="RoleManagement" asp-action="EditRole" asp-route-id="@item.Id">Edit</a>
                                <form action="/Admin/DeleteRole" method="post">
                                    <input type="hidden" name="RoleId" value="@item.Id" />
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </div>
                          
                        </td>
                    </tr>
                }
            </tbody>


        </table>

    </div>
</div>