
@model UserEditModel

<div class="container">
    <form method="post" action="/Admin/EditUser">
        <div class="row">
            <div class="col-md-9">

                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label for="a">First Name</label>
                    <input type="text" class="form-control" id="a" aria-describedby="emailHelp" asp-for="FirstName">
                    <span class="text-danger" asp-validation-for="FirstName"></span>
                </div>
                <div class="form-group">
                    <label for="b">Last Name</label>
                    <input type="text" class="form-control" id="b" asp-for="LastName">
                    <span class="text-danger" asp-validation-for="LastName"></span>

                </div>

                <div class="form-group">
                    <label for="c">User Name</label>
                    <input type="text" class="form-control" id="c" asp-for="UserName">
                    <span class="text-danger" asp-validation-for="UserName"></span>

                </div>

                <div class="form-group">
                    <label for="d">Url</label>
                    <input type="text" class="form-control" id="d" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>

                </div>




                <button type="submit" class="btn btn-primary">Sumbit</button>

            </div>

            <div class="col-md-3">


                @foreach (var rolename in ViewBag.Roles)
                {

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="selectedRoles" value="@rolename" id="@rolename" @(Model.SelectedRoles.Any(i => i == rolename) ? "checked" : "")>
                        <label class="form-check-label" for="@rolename">
                            @rolename
                        </label>
                    </div>

                }

                <hr />

                <div class="form-check">
                    <input class="form-check-input" id="y" type="checkbox" asp-for="EmailConfirmed">
                    <label class="form-check-label" for="y">
                        Email Confirmed
                    </label>
                </div>



            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
