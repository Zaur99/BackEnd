@model IEnumerable<ProductViewModel>

    <div class="container">
        <a asp-controller="Admin" asp-action="CreateProduct" class="btn btn-primary">Create New Product</a>
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" id="table_id">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        IsHome
                    </th>
                    <th>
                        IsApproved
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => b.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => b.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => b.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => b.IsHome)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => b.IsApproved)
                        </td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Admin" asp-action="EditProduct" asp-route-id="@b.Id">Edit</a>
                            <form action="/Admin/DeleteProduct" method="post">
                                <input type="hidden" name="Id" value="@b.Id" />
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

    <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
