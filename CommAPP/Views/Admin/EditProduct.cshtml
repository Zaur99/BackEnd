@model ProductModel
<form method="post" action="/Admin/EditProduct" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">

            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group">
                <label for="a">Name</label>
                <input type="text" class="form-control" id="a" aria-describedby="emailHelp" asp-for="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="b">Price</label>
                <input type="text" class="form-control" id="b" asp-for="Price">
                <span class="text-danger" asp-validation-for="Price"></span>

            </div>

            <div class="form-group">
                <label for="c">Description</label>
                <input type="text" class="form-control" id="c" asp-for="Description">
                <span class="text-danger" asp-validation-for="Description"></span>

            </div>

            <div class="form-group">
                <label for="d">Url</label>
                <input type="text" class="form-control" id="d" asp-for="Url">
                <span class="text-danger" asp-validation-for="Url"></span>

            </div>


            <div class="form-group">
                <label for="d">Image</label>

                <input type="hidden" asp-for="@Model.ImageUrl" />
                <img src="~/img/@Model.ImageUrl" style="width:80px;" />
                <input name="file" type="file" value="@Model.ImageUrl"  />
            </div>

            <button type="submit" class="btn btn-primary">Sumbit</button>

        </div>

        <div class="col-md-3">
            @for (int i = 0; i < Model.SelectedCategories.Count; i++)
            {
                <input type="hidden" name="SelectedCategories[@i].Id" value="@Model.SelectedCategories[@i].Id" />
                <input type="hidden" name="SelectedCategories[@i].Name" value="@Model.SelectedCategories[@i].Name" />
            }

            @foreach (var category in ViewBag.Categories)
            {

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="categoryIds" value="@category.Id" id="category_@category.Id" @(Model.SelectedCategories.Any(i => i.Id == category.Id) ? "checked" : "")>
                    <label class="form-check-label" for="category_@category.Id">
                        @category.Name
                    </label>
                </div>

            }

            <hr />
            <div class="form-check">
                <input class="form-check-input" id="y" type="checkbox" asp-for="@Model.IsHome">
                <label class="form-check-label" for="y">
                  IsHome
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" id="x" type="checkbox" asp-for="@Model.IsApproved">
                <label class="form-check-label" for="x">
                    IsApproved
                </label>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}   