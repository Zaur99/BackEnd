@model ProductEditViewModel
<form method="post" action="/Admin/EditProduct" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">

            <input type="hidden" asp-for="@Model.ProductEditModel.Id"/>
            <div class="form-group">
                <label for="a">Name</label>
                <input type="text" class="form-control" id="a" aria-describedby="emailHelp" asp-for="ProductEditModel.Name">
                <span class="text-danger" asp-validation-for="ProductEditModel.Name"></span>
            </div>
            <div class="form-group">
                <label for="b">Price</label>
                <input type="text" class="form-control" id="b" asp-for="ProductEditModel.Price">
                <span class="text-danger" asp-validation-for="ProductEditModel.Price"></span>

            </div>

            <div class="form-group">
                <label for="c">Description</label>
                <input type="text" class="form-control" id="c" asp-for="ProductEditModel.Description">
                <span class="text-danger" asp-validation-for="ProductEditModel.Description"></span>

            </div>

            <div class="form-group">
                <label for="d">Url</label>
                <input type="text" class="form-control" id="d" asp-for="ProductEditModel.Url">
                <span class="text-danger" asp-validation-for="ProductEditModel.Url"></span>

            </div>


            <div class="form-group">
                <label for="d">Image</label>

                <input type="hidden" asp-for="@Model.ProductEditModel.ImageUrl" />
                <img src="~/img/@Model.ProductEditModel.ImageUrl" style="width:80px;" />
                <input asp-for="@Model.File" type="file" value="@Model.ProductEditModel.ImageUrl" />
                <span class="text-danger" asp-validation-for="@Model.File"></span>
            </div>

            <button type="submit" class="btn btn-primary">Sumbit</button>

        </div>

        <div class="col-md-3">
            @for (int i = 0; i < Model.ProductEditModel.SelectedCategories.Count; i++)
            {
                <input type="hidden" asp-for="@Model.ProductEditModel.SelectedCategories[@i].Id" />
                <input type="hidden" asp-for="@Model.ProductEditModel.SelectedCategories[@i].Name"/>
            }

            @foreach (var category in ViewBag.Categories)
            {

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="categoryIds" value="@category.Id" id="category_@category.Id" @(Model.ProductEditModel.SelectedCategories.Any(i => i.Id == category.Id) ? "checked" : "")>
                    <label class="form-check-label" for="category_@category.Id">
                        @category.Name
                    </label>
                </div>

            }

            <hr />
            <div class="form-check">
                <input class="form-check-input" id="y" type="checkbox" asp-for="@Model.ProductEditModel.IsHome">
                <label class="form-check-label" for="y">
                  IsHome
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" id="x" type="checkbox" asp-for="@Model.ProductEditModel.IsApproved">
                <label class="form-check-label" for="x">
                    IsApproved
                </label>
            </div>

        </div>
    </div>
</form>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}   