@model CategoryListViewModel;

    <div class="container">
        <a asp-controller="Admin" asp-action="CreateCategory" class="btn btn-primary">Create New Category</a>
        <table class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0" id="table_id">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>

                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in Model.Categories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => b.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => b.Name)
                        </td>

                        <td>
                            <a class="btn btn-warning" asp-controller="Admin" asp-action="EditCategory" asp-route-id="@b.Id">Edit</a>
                            <form action="/Admin/DeleteCategory" method="post">
                                <input type="hidden" name="Id" value="@b.Id" />
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

   
